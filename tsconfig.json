{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true
  },
  "includes": [
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules",
    "__tests__/**/*-test.ts"
  ]
}
